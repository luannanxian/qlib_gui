# Docker Compose Environment Variables
# Copy this file to .env.docker and customize for your Docker environment
# This file is specifically for docker-compose.yml

# ============================================
# Application
# ============================================
APP_ENV=development
DEBUG=true

# ============================================
# MySQL Database (Docker Service)
# ============================================
MYSQL_ROOT_PASSWORD=root_password_change_me_in_production
MYSQL_DATABASE=qlib_ui
MYSQL_USER=qlib
MYSQL_PASSWORD=qlib_password_change_me_in_production
MYSQL_PORT=3306

# ============================================
# Redis (Docker Service)
# ============================================
REDIS_PORT=6379

# ============================================
# Backend Service
# ============================================
BACKEND_PORT=8000

# ============================================
# Flower - Celery Monitoring (Docker Service)
# ============================================
FLOWER_PORT=5555

# ============================================
# Security
# ============================================
# IMPORTANT: Generate a secure secret key in production
# Generate with: python -c 'import secrets; print(secrets.token_urlsafe(64))'
SECRET_KEY=dev-secret-key-CHANGE-IN-PRODUCTION-minimum-32-chars-recommended-64

# ============================================
# Database Configuration
# ============================================
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ============================================
# Notes for Production
# ============================================
# 1. Change all passwords to strong, unique values
# 2. Generate a secure SECRET_KEY (64+ characters)
# 3. Set APP_ENV=production and DEBUG=false
# 4. Consider using Docker secrets for sensitive data
# 5. Review resource limits in docker-compose.yml
# 6. Enable SSL/TLS for MySQL and Redis in production
